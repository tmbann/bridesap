<div class="login-page">
  <h1>管理者用ログイン</h1>
  <% if flash.present?  %>
    <% flash.each do |type, message| %>
      <div class="flash-message">
        <%= message %>
      </div>
    <% end %>
  <% end %>
	<div class="form">
		<div class="form-inner">
      <%= form_with url: admin_sessions_path, methods: :post, local: true do |f| %>
        <div class="form-email">
          <%= f.label :メールアドレス, class:"label" %><br />
          <%= f.email_field :email %>
        </div>
        <div class="form-password">
          <%= f.label :パスワード, class:"label" %>
          <%= f.password_field :password %>
        </div>
        <div class="form-login">
          <%= f.submit "ログイン" %>
        </div>
      <%end%>
    </div>
  </div>
  <!--
    <div>
      <%= link_to "ログアウト", admin_logout_path, method: :delete %>
    </div>
  -->
</div>